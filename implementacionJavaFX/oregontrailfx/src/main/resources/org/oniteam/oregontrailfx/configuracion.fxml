<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.oniteam.oregontrailfx.controllers.ConfiguracionController"
            prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50);">

    <!-- Título -->
    <Label text="CONFIGURACIÓN DE LA CARAVANA" layoutX="180.0" layoutY="30.0" textFill="WHITE">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
    </Label>

    <Label text="Prepara tu viaje a Oregón" layoutX="350.0" layoutY="75.0" textFill="#ecf0f1">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>

    <!-- Nombre del Jugador -->
    <Label text="Tu Nombre:" layoutX="200.0" layoutY="140.0" textFill="WHITE">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="txtNombre" layoutX="350.0" layoutY="137.0" prefWidth="350.0"
               promptText="Ingresa tu nombre" style="-fx-font-size: 14px;"/>

    <!-- Profesión -->
    <Label text="Profesión:" layoutX="200.0" layoutY="190.0" textFill="WHITE">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </Label>
    <ComboBox fx:id="cmbProfesion" layoutX="350.0" layoutY="187.0" prefWidth="350.0"/>

    <!-- Dinero Inicial -->
    <Label fx:id="lblDineroInicial" text="Dinero inicial: $800" layoutX="350.0" layoutY="230.0" textFill="#f39c12">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <!-- Separador -->
    <Separator layoutX="150.0" layoutY="280.0" prefWidth="600.0"/>

    <!-- Miembros de la Caravana -->
    <Label text="MIEMBROS DE LA CARAVANA" layoutX="300.0" layoutY="300.0" textFill="WHITE">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <Label text="(Opcional: Agrega hasta 4 compañeros de viaje)" layoutX="260.0" layoutY="330.0" textFill="#bdc3c7">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>

    <!-- Miembro 1 -->
    <Label text="Miembro 1:" layoutX="200.0" layoutY="370.0" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="txtMiembro1" layoutX="350.0" layoutY="367.0" prefWidth="350.0"
               promptText="Nombre del miembro (ej: esposa, 35 años)"/>

    <!-- Miembro 2 -->
    <Label text="Miembro 2:" layoutX="200.0" layoutY="420.0" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="txtMiembro2" layoutX="350.0" layoutY="417.0" prefWidth="350.0"
               promptText="Nombre del miembro (ej: hijo, 10 años)"/>

    <!-- Miembro 3 -->
    <Label text="Miembro 3:" layoutX="200.0" layoutY="470.0" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="txtMiembro3" layoutX="350.0" layoutY="467.0" prefWidth="350.0"
               promptText="Nombre del miembro (ej: hija, 8 años)"/>

    <!-- Miembro 4 -->
    <Label text="Miembro 4:" layoutX="200.0" layoutY="520.0" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="txtMiembro4" layoutX="350.0" layoutY="517.0" prefWidth="350.0"
               promptText="Nombre del miembro (ej: hijo, 6 años)"/>

    <!-- Botones -->
    <Button text="◀ VOLVER" layoutX="250.0" layoutY="600.0" prefWidth="200.0" prefHeight="50.0"
            onAction="#handleVolver"
            style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10px;"/>

    <Button text="CONTINUAR ▶" layoutX="480.0" layoutY="600.0" prefWidth="200.0" prefHeight="50.0"
            onAction="#handleContinuar"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10px;"/>

</AnchorPane>
